{
  "name": "personal-site",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build:css": "tailwindcss -i src/styles/main.css -o dist/main.css --minify",
    "dev:css": "tailwindcss -i src/styles/main.css -o dist/main.css --watch"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "autoprefixer": "^10.4.21",
    "bun-plugin-tailwind": "^0.0.15",
    "tailwindcss": "^4.1.13"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "hono": "^4.9.7"
  }
}
