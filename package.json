{
  "name": "personal-site",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others --prefix-colors \"cyan,green,blue\" --names \"BUILD,CSS,SERVE\" \"bun --watch scripts/build.ts\" \"tailwindcss -i src/styles/main.css -o dist/main.css --watch\" \"bun --watch scripts/serve.ts\"",
    "build": "bun run scripts/build.ts",
    "serve": "bun run scripts/serve.ts",
    "preview": "bun run build && bun run serve",
    "clean": "rm -rf dist"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^8.2.2",
    "tailwindcss": "^4.1.13",
    "@tailwindcss/cli": "^4.1.13"
  }
}
